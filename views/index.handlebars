<h1>Eat-The-Burger!</h1>

<div>
  <div class="row">
    <div class="col-6">

      <h3>Devour?</h3>

      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        {{this.id}}: {{this.burger_name}}
        <button class="btn btn-dark" data-id="{{this.id}}" type="button" id="devoured">Devour!</button>
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-6">

      <h3>Devoured!</h3>

      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
        {{this.id}}: {{this.burger_name}}
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>
</div>

<h5>Add a Burger</h5>
<form class="create-form">

  <div class="form-group">
    {{!-- <label for="bur">Burger Name:</label> --}}
    <input type="text" id="newBurger" name="name">
  </div>
  <button type="submit" class="btn btn-dark" id="addBurger">Add Burger</button>
  <br /><br />
</form>